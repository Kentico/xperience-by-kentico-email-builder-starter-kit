@using Kentico.Xperience.Mjml.StarterKit.Rcl.Widgets.Enums

@namespace Kentico.Xperience.Mjml.StarterKit.Rcl.Widgets

@if (Properties.DescriptionPosition == nameof(DescriptionPositionType.Above))
{
    <mj-text css-class="text">
        @Properties.Description
    </mj-text>
}

<mj-image src="@ImageUrl" css-class="image"
          alt="@Properties.AltText">
</mj-image>

@if (Properties.DescriptionPosition == nameof(DescriptionPositionType.Below))
{
    <mj-text css-class="text">
        @Properties.Description
    </mj-text>
}