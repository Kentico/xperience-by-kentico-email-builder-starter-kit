@using Kentico.Xperience.Mjml.StarterKit.Rcl.Widgets.Enums

@namespace Kentico.Xperience.Mjml.StarterKit.Rcl.Widgets

@if (Properties.DescriptionPosition == nameof(ContentPositionType.Above))
{
    <mj-text css-class="mj-email-text">
        @Properties.Description
    </mj-text>
}

<mj-image src="@ImageUrl" css-class="mj-email-image"
          alt="@Properties.AltText">
</mj-image>

@if (Properties.DescriptionPosition == nameof(ContentPositionType.Below))
{
    <mj-text css-class="mj-email-text">
        @Properties.Description
    </mj-text>
}