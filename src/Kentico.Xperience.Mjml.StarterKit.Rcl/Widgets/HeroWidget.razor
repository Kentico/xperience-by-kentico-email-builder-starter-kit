@namespace Kentico.Xperience.Mjml.StarterKit.Rcl.Widgets

@if (Properties.DescriptionPosition == DescriptionPosition.Above)
{
    <mj-text color="@Properties.TextColor" 
             font-size="16px" 
             padding="10px">
        @Properties.Description
    </mj-text>
}

<mj-image src="@Properties.ImageUrl" 
          alt="@Properties.AltText"
          border-radius="@Properties.BorderRadius"
          background-color="@Properties.BackgroundColor"
          padding="0px">
</mj-image>

@if (Properties.DescriptionPosition == DescriptionPosition.Below)
{
    <mj-text color="@Properties.TextColor" 
             font-size="16px" 
             padding="10px">
        @Properties.Description
    </mj-text>
}

@code {
    [Parameter]
    public HeroWidgetProperties Properties { get; set; } = null!;
}