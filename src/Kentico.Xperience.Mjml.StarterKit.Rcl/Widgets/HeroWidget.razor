@namespace Kentico.Xperience.Mjml.StarterKit.Rcl.Widgets

@if (Properties.DescriptionPosition == nameof(DescriptionPosition.Above))
{
    <mj-text css-class="text">
        @Properties.Description
    </mj-text>
}

<mj-image src="@ImageUrl" css-class="image"
          alt="@Properties.AltText">
</mj-image>

@if (Properties.DescriptionPosition == nameof(DescriptionPosition.Below))
{
    <mj-text css-class="text">
        @Properties.Description
    </mj-text>
}

@code {
    [Parameter]
    public HeroWidgetProperties Properties { get; set; } = null!;
}