@using Microsoft.AspNetCore.Mvc

@namespace Kentico.Xperience.Mjml.StarterKit.Rcl.Widgets

@inject IUrlHelper Url

<mj-title>
    @Model.Title
</mj-title>
@if (Properties.DescriptionPosition == nameof(DescriptionPositionOption.Above))
{
    <mj-text
             font-size="16px"
             padding="10px">
        @Model.Content
    </mj-text>
}
<mj-image src="@Url.Content(Model.ImageUrl)"
          padding="0px">
</mj-image>
@if (Properties.DescriptionPosition == nameof(DescriptionPositionOption.Below))
{
    <mj-text font-size="16px"
             padding="10px">
        @Model.Content
    </mj-text>
}

@code {
    [Parameter]
    public ArticleWidgetProperties Properties { get; set; } = new();
}