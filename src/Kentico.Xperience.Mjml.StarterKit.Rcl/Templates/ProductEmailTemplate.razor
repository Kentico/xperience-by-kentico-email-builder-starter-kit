@using Kentico.Xperience.Mjml.StarterKit.Rcl.Widgets
@using Kentico.Xperience.Mjml.StarterKit.Rcl.Sections
@using Kentico.VisualBuilderComponents.Rcl.Components
@using Kentico.EmailBuilder.Web.Mvc

@inject CssLoaderService CssLoaderService
@inject IEmailContextAccessor emailContextAccessor
@code {
    private string cssContent = string.Empty;
    private string sectionIdentifier = FullWidthEmailSection.IDENTIFIER;

    protected override async Task OnInitializedAsync()
    {
        cssContent = await CssLoaderService.GetCssAsync();
    }
}
<mjml>
    <mj-head>
        <mj-title>Simple Marketing Email</mj-title>
        <mj-style inline="inline">
            @((MarkupString)cssContent)
        </mj-style>
        <EmailBuilderStyles />
    </mj-head>
    <mj-body>
        <mj-section>
            <EditableArea AreaIdentifier="MainContent" DefaultSectionIdentifier="@sectionIdentifier" />
        </mj-section>
        <EmailBuilderScripts />
    </mj-body>
</mjml>
 