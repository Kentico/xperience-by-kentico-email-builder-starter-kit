<mj-section>
    @for (int i = 0; i < NumberOfSectionColumns; i++)
    {
        <mj-column width="@($"{100 / NumberOfSectionColumns}%")">
            <WidgetZone ZoneName="@($"Widget_Zone_{NumberOfSectionColumns}")" />
        </mj-column>
    }
</mj-section>

@code {
    /// <summary>
    /// The number of columns in a section.
    /// </summary>
    [Parameter]
    public int NumberOfSectionColumns { get; set; }
}